# ===========================================
# NBA Pick'em Backend - Production Environment
# ===========================================
# Copy this file to .env.production and update with real values
# DO NOT commit .env.production to version control!

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string format:
# postgresql+psycopg://user:password@host:port/database
DATABASE_URL=postgresql+psycopg://your_db_user:your_db_password@your_db_host:5432/your_db_name

# ===========================================
# JWT Configuration
# ===========================================
# Generate a secure random key: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-with-secrets-module
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Application Settings
# ===========================================
APP_NAME=NBA Pick'em API
DEBUG=False

# ===========================================
# Optional: CORS Settings
# ===========================================
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# Optional: Email Configuration (if needed)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# Optional: External API Keys
# ===========================================
# NBA_API_KEY=your-nba-api-key-if-needed
# SENTRY_DSN=your-sentry-dsn-for-error-tracking